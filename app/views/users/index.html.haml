%h1
  Control Panel
%ul.nav.nav-tabs{"role" => "tablist"}
  %li.active
    %a{href:"#users", "role" => "tab", "data-toggle" => "tab"}
      Users
.tab-content
  #users.tab-pane.active
    %h1.align-center.col-md-4.col-md-offset-4
      Users
    %table.table.table-striped.table-bordered.table-hover.table-condensed
      %thead
        %tr
          %td
            ID
          %td
            Username
          %td
            Email
          %td
            Delete
          %td
            Edit
      %tbody
        -@users.each do |user|
          = form_for(user) do |f|
            %div
              %tr
                %td
                  =user.id
                %td
                  =link_to user.name, user
                %td
                  =user.email
                %td
                  = link_to "Delete", user, method: :delete, data:{confirm:"Are you sure?"}, id: "delete_user_#{user.id}"
                %td
                  = link_to "Edit", edit_user_path(user), id: "edit_user_#{user.id}"